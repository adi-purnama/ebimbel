<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/grayTransparent"
	android:gravity="center_horizontal">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="320dp"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:background="@color/dove_gray">
		<TextView
			android:id="@+id/juduladdmateri"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="20dp"/>
		<Button
			android:id="@+id/btnaddfile"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_marginStart="10dp"
			android:paddingTop="10dp"
			android:text="File"/>
		<TextView
			android:layout_marginStart="10dp"
			android:layout_marginEnd="10dp"
			android:id="@+id/namafile"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/dark_gray"/>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="40dp">
			<ProgressBar
				android:id="@+id/progressnya"
				android:layout_width="0dp"
				android:layout_weight=".5"
				android:layout_height="wrap_content"
				android:visibility="gone" />
			<Button
				android:id="@+id/btnsimpanadd"
				android:layout_width="0dp"
				android:layout_weight=".5"
				android:layout_height="40dp"
				android:text="Simpan"
				android:background="@color/colorPrimary"/>
			<Button
				android:id="@+id/btnbataladd"
				android:layout_width="0dp"
				android:layout_weight=".5"
				android:layout_height="40dp"
				android:background="@color/orange"
				android:text="Batal"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>